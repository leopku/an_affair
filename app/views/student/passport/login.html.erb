<% content_for :main do %>
<div class="row" style="padding: 120px 0;">
  <div class="four columns"></div>
  <div class="four columns">
    <%= form_tag("/student/passport/login") do %>
      <fieldset>
        <legend>学生登录</legend>

        <div <% if flash[:error_number] %>class="error"<% end %>>
            <label>学号</label>
            <input name="number" type="text" placeholder="请输入学号" />
            <% if flash[:error_number] %><small class="error">无此学号</small><% end %>
        </div>

        <div <% if flash[:error_password] %>class="error"<% end %>>
            <label>密码</label>
            <input name="password" type="password" placeholder="请输入密码" />
          <% if flash[:error_password] %><small class="error">密码错误</small><% end %>
        </div>

      </fieldset>
      <input type="submit"  value="登录" class="small button" style="float: right;" />
    <% end %>
  </div>
  <div class="four columns"></div>
</div>
<% end %>
