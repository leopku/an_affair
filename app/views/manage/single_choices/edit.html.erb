<% content_for :main do %>
<script type="text/javascript" charset="utf-8">
    window.UEDITOR_HOME_URL = "/ueditor1_2_3_0-utf8-net/";
</script>
<script type="text/javascript" charset="utf-8" src="/ueditor1_2_3_0-utf8-net/editor_config.js"></script>
<script type="text/javascript" charset="utf-8" src="/ueditor1_2_3_0-utf8-net/editor_all.js"></script>
<link rel="stylesheet" type="text/css" href="/ueditor1_2_3_0-utf8-net/themes/default/ueditor.css"/>

<div class="row">
  <div class="twelve columns">
      <%= form_for @sc,:url=>{:action => "update" }, :method => "post", :html => {:class => "custom"} do |f| %>
        <fieldset style="padding:10px;">
          <legend>修改题目</legend>
        <input id="swfUploadCookie" type="text" value="<%= @swfupload_cookie %>" style="display:none;"/>
        <label>题目id</label>
        <%= f.text_field "id", :readonly => "readonly" %>
        <label>题目内容</label>
        <%= f.text_area "content" %>
        <br />
        <label for="answer">正确答案</label>
          <label for="single_choice_answer" style="float:left; margin-left: 20px;"><%= f.radio_button :answer, "A" %> A</label>
          <label for="single_choice_answer" style="float:left; margin-left: 20px;"><%= f.radio_button :answer, "B" %> B</label>
          <label for="single_choice_answer" style="float:left; margin-left: 20px;"><%= f.radio_button :answer, "C" %> C</label>
          <label for="single_choice_answer" style="float:left; margin-left: 20px;"><%= f.radio_button :answer, "D" %> D</label>

        <div style="clear: both"></div>
        <label for="questionCategoriesSelect">所属类别</label>
        <%= render :partial => "shared/y_recursion_selects_2", :locals => { :id => "questionCategoriesSelect", :f => f } %>
          <input type="submit"  value="保存" class="small button" style="float: right;" />
        </fieldset>

      <% end %>
  </div>
</div>
<% end %>
